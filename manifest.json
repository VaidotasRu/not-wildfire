{
  "manifest_version": 2,

  "name": "Automatization",
  "description": "Automatization extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [ "background.js", "jquery-3.3.1.js" ],
		      "matches": ["http://*/*", "https://*/*"],
    "persistent": false
  },

