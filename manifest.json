{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["tmp.js"]	
  },
  "permissions": [
    "activeTab",
	"http://*/*", 
	"https://*/*",
	"tabs",
    "storage"
  ]
}
